CREATE   PROCEDURE [dbo].[TMS_UpdateTask_20250508]
    @tId INT,
    @Title NVARCHAR(50),
    @Description NVARCHAR(500) = NULL,
    @DueDate DATETIME2,
    @Priority TINYINT,
    @Status TINYINT,
    @UpdatedAt DATETIME2,
    @CreatedBy INT = NULL
AS
BEGIN
    SET NOCOUNT ON;    
        IF ((SELECT 1 FROM TMS_tbl_Task_20250508 WHERE Id = @tId) > 0)
        BEGIN
            UPDATE TMS_tbl_Task_20250508 
            SET Title = @Title,
                Description = @Description,
                DueDate = @DueDate,
                Priority = @Priority,
                Status = @Status,
                UpdatedAt = @UpdatedAt
            WHERE Id = @tId;
        END
        ELSE
        RAISERROR ('This Id does not exist ',16,1 )
        RETURN 0;       
END
GO
